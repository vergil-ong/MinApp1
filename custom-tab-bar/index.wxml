<cover-view class="tab-bar">
    <cover-view class="tab-bar-border"></cover-view>
    <cover-view wx:for="{{list}}" wx:key="index" class="tab-bar-item {{item.bulge?'bulge':''}}" data-path="{{item.pagePath}}" data-index="{{index}}" bindtap="switchTab">
        <view  wx:if="item.bulge" class="tab-bar-bulge tab-bar-view"></view>
        <cover-image class="tab-bar-item-cover-image" src="{{selected === index ? item.selectedIconPath : item.iconPath}}"></cover-image>
        <cover-view wx:if="{{item.text}}" class="tab-bar-item-cover-view" style="color: {{selected === index ? selectedColor : color}}">{{item.text}}</cover-view>
    </cover-view>
</cover-view>